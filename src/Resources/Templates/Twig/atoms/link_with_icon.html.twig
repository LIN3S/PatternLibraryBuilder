{#
    --------------------------------------------------------------------------------------------
    LINK ATOM
    --------------------------------------------------------------------------------------------

    Link atom.


    PROPERTY                                DEFAULT VALUE                               REQUIRED
    ============================================================================================

    modifier
    tag                                     a
    url                                     #
    options                                 null
    content                                                                             required
    target                                  _blank
    icon                                                                                required
#}

{% set modifier = modifier is not empty ? ' link-with-icon--' ~ modifier : null %}
{% set tag = tag|default('a') %}

<{{ tag }}{% if tag == 'a' %} href="{{ url|default('#') }}" target="{{ target|default('_blank') }}"{% endif %} class="link-with-icon{{ modifier }}" {{ options|default(null) }}>
    {% include '@Euskaltel/svg/' ~ icon ~ '.svg.twig' %}
    {%- block link_content -%}
        {{ content }}
    {%- endblock -%}
</{{ tag }}>
