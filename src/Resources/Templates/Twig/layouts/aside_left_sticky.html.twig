{#
    --------------------------------------------------------------------------------------------
    ASIDE LEFT STICKY LAYOUT
    --------------------------------------------------------------------------------------------

    An sticky-aside (left positioned) layout.


    PROPERTY                                DEFAULT VALUE                               REQUIRED
    ============================================================================================

    modifier
#}

{% set modifier = modifier is not empty ? ' sticky--' ~ modifier : null %}

<div class="sticky js-sticky{{ modifier }}">
    <aside class="sticky__aside">
        {%- block aside -%}{%- endblock -%}
    </aside>
    <article class="sticky__article">
        {%- block article -%}{%- endblock -%}
    </article>
</div>
