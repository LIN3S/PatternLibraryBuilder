{% macro hero_slider(id, aria_label, slides) %}
    {% include '@Euskaltel/compositions/slider.html.twig' with {
        id: id,
        aria_label: ariaLabel,
        slide_component_type: 'hero',
        nav_item_component_type: 'hero_slider_nav_item',
        modifier: 'hero',
        nav_item_css_class: 'hero-slider__nav-item',
        has_nav_list: true,
        has_nav_buttons: false,
        slides: slides
    } %}
{% endmacro %}
