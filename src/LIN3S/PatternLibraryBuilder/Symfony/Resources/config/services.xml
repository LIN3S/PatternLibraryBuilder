<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="lin3s.pattern_library_builder.controller.index_controller"
                 class="LIN3S\PatternLibraryBuilder\Controller\IndexController">
            <argument type="service" id="lin3s.pattern_library_builder.loader.styleguide_config_loader"/>
            <argument type="service" id="twig"/>
            <argument>@lin3s_pattern_library_builder/pages/architecture.html.twig</argument>
        </service>

        <service id="lin3s.pattern_library_builder.twig.prettify_twig_parameters_extension"
                 public="false"
                 class="LIN3S\PatternLibraryBuilder\Twig\PrettifyTwigParametersExtension">
            <tag name="twig.extension"/>
        </service>

        <service id="lin3s.pattern_library_builder.twig.dindent_extension"
                 public="false"
                 class="LIN3S\PatternLibraryBuilder\Twig\DindentExtension">
            <tag name="twig.extension"/>
        </service>

        <service id="lin3s.pattern_library_builder.twig.icon_finder"
                 public="false"
                 class="LIN3S\PatternLibraryBuilder\Twig\IconFinderExtension">
            <argument>%lin3s_pattern_library_builder.config%</argument>
            <tag name="twig.extension"/>
        </service>

        <service id="lin3s.pattern_library_builder.twig.icon"
                 public="false"
                 class="LIN3S\PatternLibraryBuilder\Twig\IconExtension">
            <argument type="service" id="twig"/>
            <argument>%lin3s_pattern_library_builder.config%</argument>
            <tag name="twig.extension"/>
        </service>

        <service id="lin3s.pattern_library_builder.loader.styleguide_config_loader"
                 public="false"
                 class="LIN3S\PatternLibraryBuilder\Loader\StyleguideConfigLoader">
            <argument>null</argument>
        </service>
    </services>
</container>
