{
  "name": "pattern-library-builder",
  "description": "Library that provides an elegant and easy way to develop a pattern library for your front-end components",
  "keywords": [
    "css",
    "pattern-library",
    "design-system",
    "twig",
    "symfony"
  ],
  "license": "MIT",
  "author": "LIN3S",
  "dependencies": {
    "foundation-sites": "^6.3.1",
    "lin3s-event-bus": "^0.5.1",
    "lin3s-front-foundation": "^0.2.2",
    "prismjs": "^1.6.0"
  },
  "devDependencies": {
    "lin3s-distribution": "^2.4"
  },
  "babel": {
    "presets": [
      "stage-2",
      "es2015"
    ],
    "plugins": [
      "transform-class-properties"
    ]
  },
  "scripts": {
    "phoenix": "rm -rf node_modules && yarn install",
    "build": "node_modules/webpack/bin/webpack.js",
    "build:prod": "node_modules/webpack/bin/webpack.js --env.env prod -p",
    "build:watch": "node_modules/webpack/bin/webpack.js --watch"
  }
}
