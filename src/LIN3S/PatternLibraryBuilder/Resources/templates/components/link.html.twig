{% set modifier = modifier|default is not empty ? ' plb-link--' ~ modifier : null %}
{% set tag = tag|default('a') %}

<{{ tag }}{% if tag == 'a' %} href="{{ url|default('#') }}" target="{{ target|default('_blank') }}"{% endif %} class="plb-link{{ modifier }}" {{ options|default(null) }}>
{%- block link_content -%}
    {{ content }}
{%- endblock -%}
</{{ tag }}>
